<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HDWWeekView">
        <attr name="hdw_wv_backgroundColor" format="reference|color"/>
        <attr name="hdw_wv_verticalPadding" format="reference|dimension"/>
        <attr name="hdw_wv_horizontalPadding" format="reference|dimension"/>
        <attr name="hdw_wv_animDuration" format="reference|integer"/>
    </declare-styleable>

    <declare-styleable name="HDWContactView">
        <attr name="hdw_cv_buttonSrc" format="reference"/>
        <attr name="hdw_cv_buttonSize" format="reference|dimension"/>
        <attr name="hdw_cv_avatarSrc" format="reference"/>
        <attr name="hdw_cv_avatarSize" format="reference|dimension"/>
        <attr name="hdw_cv_spacing" format="reference|dimension"/>
        <attr name="hdw_cv_name" format="reference|string"/>
        <attr name="hdw_cv_nameTextAppearance" format="reference"/>
        <attr name="hdw_cv_nameTextSize" format="reference|dimension"/>
        <attr name="hdw_cv_nameTextColor" format="reference|color"/>
        <attr name="hdw_cv_address" format="reference|string"/>
        <attr name="hdw_cv_addressTextAppearance" format="reference"/>
        <attr name="hdw_cv_addressTextSize" format="reference|dimension"/>
        <attr name="hdw_cv_addressTextColor" format="reference|color"/>
        <attr name="android:minHeight"/>
    </declare-styleable>

    <declare-styleable name="HDWContactEditText">
        <attr name="hdw_cet_spanHeight" format="reference|dimension"/>
        <attr name="hdw_cet_spanMaxWidth" format="reference|dimension"/>
        <attr name="hdw_cet_spanPaddingLeft" format="reference|dimension"/>
        <attr name="hdw_cet_spanPaddingRight" format="reference|dimension"/>
        <attr name="hdw_cet_spanFontFamily" format="reference|string"/>
        <attr name="hdw_cet_spanTextStyle" format="integer">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="bold_italic" value="3"/>
        </attr>
        <attr name="hdw_cet_spanTextSize" format="reference|dimension"/>
        <attr name="hdw_cet_spanTextColor" format="reference|color"/>
        <attr name="hdw_cet_spanBackgroundColor" format="reference|color"/>
        <attr name="hdw_cet_spanSpacing" format="reference|dimension"/>
    </declare-styleable>

</resources>
