<resources>

    <style name="MenuItemRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="hdw_rd_rippleColor">#902DA0FF</item>
        <item name="hdw_rd_rippleAnimDuration">300</item>
        <item name="hdw_rd_maskType">rectangle</item>
        <item name="hdw_rd_cornerRadius">0dp</item>
    </style>

    <!-- AppBar Style -->

    <style name="AppBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="selectableItemBackground">@null</item>
    </style>

    <!-- Navigator Drawable -->

    <style name="NavigatorDrawableIcon" parent="Material.Drawable.NavigationDrawerIcon">
        <item name="hdw_lmd_strokeSize">3dp</item>
        <item name="hdw_lmd_padding">18dp</item>
    </style>

    <style name="NavigationDrawerDrawable">
        <item name="hdw_nd_ripple">@style/ToolbarRippleStyle</item>
        <item name="hdw_nd_icon">@style/NavigatorDrawableIcon</item>
    </style>

    <style name="ToolbarRippleStyle" parent="Material.Drawable.Ripple.Touch.MatchView.Light">
        <item name="hdw_rd_backgroundColor">@android:color/transparent</item>
        <item name="hdw_rd_rippleColor">#33FFFFFF</item>
    </style>

    <!-- SnackBar Style -->

    <style name="SnackBarSingleLine" parent="Material.Widget.SnackBar.Mobile">
        <item name="hdw_sb_text">This is single-line snackbar.</item>
        <item name="hdw_sb_actionText">CLOSE</item>
        <item name="hdw_sb_duration">0</item>
    </style>

    <style name="SnackBarMultiLine" parent="Material.Widget.SnackBar.Mobile.MultiLine">
        <item name="hdw_sb_text">This is multi-line snackbar.\nIt will auto-close after 5s.</item>
        <item name="hdw_sb_actionText"></item>
        <item name="hdw_sb_duration">5000</item>
    </style>

    <style name="SimpleDialog" parent="Material.App.Dialog.Simple">
        <item name="hdw_di_inAnimation">@anim/anim_scale_in</item>
        <item name="hdw_di_outAnimation">@anim/anim_scale_out</item>
    </style>

    <style name="SimpleDialogLight" parent="Material.App.Dialog.Simple.Light">
        <item name="hdw_di_inAnimation">@anim/anim_scale_in</item>
        <item name="hdw_di_outAnimation">@anim/anim_scale_out</item>
    </style>

    <!-- ContactView -->
    <style name="ContactView">
        <item name="android:minHeight">56dp</item>
        <item name="hdw_cv_buttonSize">0dp</item>
        <item name="hdw_cv_avatarSize">40dp</item>
        <item name="hdw_cv_spacing">8dp</item>
        <item name="hdw_cv_nameTextAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="hdw_cv_nameTextColor">@color/abc_primary_text_material_light</item>
        <item name="hdw_cv_addressTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="hdw_cv_addressTextColor">@color/abc_primary_text_material_light</item>
    </style>

    <style name="ReplacementContactView" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="hdw_rd_cornerRadius">0dp</item>
        <item name="hdw_rd_delayClick">none</item>

        <item name="android:minHeight">56dp</item>
        <item name="hdw_cv_buttonSize">0dp</item>
        <item name="hdw_cv_avatarSize">40dp</item>
        <item name="hdw_cv_spacing">8dp</item>
        <item name="hdw_cv_nameTextAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="hdw_cv_nameTextColor">@color/abc_primary_text_material_light</item>
        <item name="hdw_cv_addressTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="hdw_cv_addressTextColor">@color/abc_primary_text_material_light</item>
    </style>

    <style name="SelectedContactView" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">#FF00B8D4</item>
        <item name="hdw_rd_cornerRadius">0dp</item>
        <item name="hdw_rd_delayClick">none</item>

        <item name="android:minHeight">72dp</item>
        <item name="hdw_cv_buttonSrc">@drawable/ic_cancel_white_24dp</item>
        <item name="hdw_cv_buttonSize">48dp</item>
        <item name="hdw_cv_nameTextColor">#FFFFFFFF</item>
        <item name="hdw_cv_addressTextColor">#FFFFFFFF</item>
        <item name="hdw_cv_avatarSize">40dp</item>
        <item name="hdw_cv_spacing">8dp</item>
        <item name="hdw_cv_nameTextAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="hdw_cv_addressTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="ContactEditText" parent="Material.Widget.EditText.Light">
        <item name="hdw_cet_spanHeight">32dp</item>
        <item name="hdw_cet_spanMaxWidth">150dp</item>
        <item name="hdw_cet_spanPaddingLeft">8dp</item>
        <item name="hdw_cet_spanPaddingRight">12dp</item>
        <item name="hdw_cet_spanTextSize">14sp</item>
        <item name="hdw_cet_spanTextColor">@color/abc_primary_text_material_light</item>
        <item name="hdw_cet_spanBackgroundColor">#FFE0E0E0</item>
        <item name="hdw_cet_spanSpacing">4dp</item>
    </style>

</resources>
