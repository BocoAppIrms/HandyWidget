    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/hdw_dialog_selector_btn_press_no_corner"
        android:ellipsize="end"
        android:maxLines="1"
        android:minHeight="0dp"
        android:padding="12dp"
        android:text="2"
        android:textColor="@color/hdw_dialog_text_item_33"
        android:textSize="@dimen/hdw_dialog_item_txt_size"/>

</RelativeLayout>



